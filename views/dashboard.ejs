<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="http://localhost:3000/static/images/icon.svg" />
  <script src="http://localhost:3000/static/js/jquery.js"></script>
  <script src="http://localhost:3000/static/js/bootstrap.js"></script>
  <link rel="stylesheet" href="http://localhost:3000/static/css/bootstrap.css">
  <link rel="stylesheet" href="http://localhost:3000/static/css/login.css">
  <link rel="stylesheet" href="http://localhost:3000/static/css/dashboard.css">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <title>Smart Car System</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/dashboard">Smart Car System</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a href="/auth/logout" id="nav-logout">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="progress-bar-car">
        <div class="anchors">
          <div class="anchor" id="anchor-a">A</div>
          <div class="anchor" id="anchor-b">B</div>
          <div class="anchor" id="anchor-c">C</div>
          <div class="anchor" id="anchor-d">D</div>
        </div>
        <div class="line"></div>
        <div class="line-progress" id='line-progress'></div>
        <div class="car-icon"></div>
        <span id="car-icon"><i class="fa fa-bus"></i></span>
      </div>
    </div>
    <div class="row" id="monitor">
      <div class="monitor">
        <div class="card">
          <div class="card-header">
            <h1>Monitor</h1>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="row">
                <div class="col-8">
                  Quảng đường đi được:
                </div>
                <div class="col-4">
                  <%= progress %>%
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-8">
                  Chuyển hướng xe:
                </div>
                <div class="col-4">
                  <button type="button" class="btn btn-primary">Chuyển hướng</button>
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-8">
                  Chạy xe:
                </div>
                <div class="col-4">
                  <button type="button" class="btn btn-success">Chạy xe</button>
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-8">
                  Dừng xe:
                </div>
                <div class="col-4">
                  <button type="button" class="btn btn-danger">Dừng xe</button>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <script>
    const progress = <%= progress %>
  </script>
  <script src="http://localhost:3000/static/js/dashboard.js"></script>
</body>

</html>